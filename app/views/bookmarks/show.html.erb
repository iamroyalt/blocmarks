<div class="media">
  <div class="media-body">
    <h2 class="meadia-heading">
      <h2><%= @bookmark.url %></h2>
  </div>
  <% if policy(@bookmark).update?%>
    <%= link_to "Edit Bookmark", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-success btn-xs' %>
  <% end %>
  <% if policy(@bookmark).destroy?%>
    <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
  <% end %>
  </div>
</div>
