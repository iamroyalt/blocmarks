<h1><%= @topic.title %></h1>
  <% @topic.bookmarks.each do |bookmark| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
        </h4>
          <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
          <%#= render partial: 'likes/like', locals: { bookmark: @bookmark } %>
      </div>
    </div>
    <% end %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success btn-xs' %>
          <%= link_to "Edit Topic", edit_topic_path(@topic), class: 'btn btn-warning btn-xs' %>
          <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger btn-xs' %>
          <h4><%= link_to "Back to Blocmark Topics", topics_path %></h4>
        </h4>
      </div>
   </div>
